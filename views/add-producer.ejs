    <div class="container mt-5">
        <div class="row">
            <!-- Danh sách nhà sản xuất -->
            <div class="col-md-6">
                <h3 class="mb-4">Danh sách</h3>
                <div id="alert-area"></div>
                <table class="table table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Tên nhà sản xuất</th>
                            <th>Địa chỉ</th>
                            <th>Vĩ độ</th>
                            <th>Kinh độ</th>
                        </tr>
                    </thead>
                    <tbody id="producer-list">
                        <!-- Dữ liệu từ backend sẽ được hiển thị ở đây -->
                    </tbody>
                </table>
            </div>

            <!-- Form thêm mới nhà sản xuất -->
            <div class="col-md-6">
                <h3 class="mb-4">Thêm mới</h3>
                <form id="add-producer-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Tên nhà sàn xuất</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="nhập nhà sàn xuất"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Địa chỉ</label>
                        <textarea class="form-control" id="address" name="address" placeholder="Nhập địa chỉ" rows="3"
                            required></textarea>
                    </div>

                    <!-- Bản đồ Google Maps -->
                    <div id="map"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="lat" class="form-label">Vĩ độ</label>
                            <input type="number" step="0.000001" class="form-control" id="lat" name="lat"
                                placeholder="Latitude" required readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lng" class="form-label">Kinh độ</label>
                            <input type="number" step="0.000001" class="form-control" id="lng" name="lng"
                                placeholder="Longitude" required readonly>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
